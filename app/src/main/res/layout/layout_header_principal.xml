<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <Button
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/btListaPasajeros"
        android:background="@drawable/bt_lista_alumnos"
        android:layout_weight="1"
        android:gravity="clip_horizontal|center|clip_vertical" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt_pasajero"
            android:id="@+id/tvNombrePasajero"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_fin_ruta"
            android:id="@+id/btFinRuta"
            android:layout_gravity="center_horizontal"
            android:textColor="#FFF"
            android:background="@drawable/bt_rojo"
            android:layout_marginTop="5dp"
            android:onClick="clickFinalizarRuta"
            android:layout_marginBottom="5dp"
            android:singleLine="false"
            android:padding="10dp" />
    </LinearLayout>

    <!--<Button-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="match_parent"-->
        <!--android:text="i"-->
        <!--android:id="@+id/button3"-->
        <!--android:layout_weight="1" />-->

</LinearLayout>
