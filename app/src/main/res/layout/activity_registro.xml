<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="co.com.puli.trade.fdv.actividades.RegistroActivity"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="0dp"
    android:background="@drawable/background_route_gray"
    android:id="@+id/contentLayout">

    <!-- Toolbar como Action bar -->
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_action_bar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_gravity="center_vertical">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:id="@+id/etDoc"
                android:layout_gravity="center_horizontal"
                android:hint="@string/txt_documento"
                android:background="@drawable/et_login"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginBottom="10dp"
                android:textColor="#FFF"
                android:textColorHint="#CCC"
                android:inputType="number" />
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:id="@+id/etNombres"
                android:layout_gravity="center_horizontal"
                android:inputType="textPersonName"
                android:hint="@string/txt_nombres"
                android:background="@drawable/et_login"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginBottom="10dp"
                android:textColor="#FFF"
                android:textColorHint="#CCC" />
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:id="@+id/etApellidos"
                android:layout_gravity="center_horizontal"
                android:hint="@string/txt_apellidos"
                android:background="@drawable/et_login"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginBottom="10dp"
                android:textColor="#FFF"
                android:textColorHint="#CCC"
                android:inputType="textPersonName" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:id="@+id/etCel"
                android:layout_gravity="center_horizontal"
                android:hint="@string/txt_celular"
                android:background="@drawable/et_login"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginBottom="10dp"
                android:textColor="#FFF"
                android:textColorHint="#CCC"
                android:inputType="phone" />
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:id="@+id/etEmail"
                android:layout_gravity="center_horizontal"
                android:inputType="textEmailAddress"
                android:hint="@string/txt_email"
                android:background="@drawable/et_login"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginBottom="10dp"
                android:textColor="#FFF"
                android:textColorHint="#CCC" />
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:id="@+id/etPlaca"
                android:layout_gravity="center_horizontal"
                android:inputType="text"
                android:hint="@string/txt_placa_vehiculo"
                android:background="@drawable/et_login"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginBottom="10dp"
                android:textColor="#FFF"
                android:textColorHint="#CCC" />
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:id="@+id/etMarca"
                android:layout_gravity="center_horizontal"
                android:inputType="text"
                android:hint="@string/txt_marca_vehiculo"
                android:background="@drawable/et_login"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginBottom="10dp"
                android:textColor="#FFF"
                android:textColorHint="#CCC"/>
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:id="@+id/etBarrio"
                android:layout_gravity="center_horizontal"
                android:inputType="text"
                android:hint="@string/txt_barrio"
                android:background="@drawable/et_login"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginBottom="10dp"
                android:textColor="#FFF"
                android:textColorHint="#CCC"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <Button
                    android:layout_width="150dp"
                    android:layout_height="38dp"
                    android:text="@string/txt_guardar"
                    android:id="@+id/btGuardar"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/bt_ingreso"
                    android:textSize="20sp"
                    android:textAllCaps="true"
                    android:textColor="#ed9300"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_marginRight="5dp"
                    tools:ignore="ButtonStyle,RtlHardcoded" />
                <Button
                    android:layout_width="150dp"
                    android:layout_height="38dp"
                    android:text="@string/txt_cancelar"
                    android:id="@+id/btCancelar"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/bt_ingreso"
                    android:textSize="20sp"
                    android:textAllCaps="true"
                    android:textColor="#ed9300"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_marginLeft="5dp"
                    tools:ignore="ButtonStyle,RtlHardcoded" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
