<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contentLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="0dp"
    android:background="@drawable/background_route_gray"
    tools:context=".actividades.NuevoPDVActivity">

    <!-- Toolbar como Action bar -->
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_action_bar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_gravity="center_vertical">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:id="@+id/etNombreComercial"
                android:layout_gravity="center_horizontal"
                android:hint="@string/txt_nombre_comercial"
                android:background="@drawable/et_login"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginBottom="10dp"
                android:textColor="#FFF"
                android:textColorHint="#CCC"
                android:inputType="textPersonName" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:id="@+id/etNombreContacto"
                android:layout_gravity="center_horizontal"
                android:hint="@string/txt_nombre_contacto"
                android:background="@drawable/et_login"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginBottom="10dp"
                android:textColor="#FFF"
                android:textColorHint="#CCC"
                android:inputType="textPersonName" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:id="@+id/etApellidoContacto"
                android:layout_gravity="center_horizontal"
                android:hint="@string/txt_apellido_contacto"
                android:background="@drawable/et_login"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginBottom="10dp"
                android:textColor="#FFF"
                android:textColorHint="#CCC"
                android:inputType="textPersonName" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:id="@+id/etDireccion"
                android:layout_gravity="center_horizontal"
                android:hint="@string/txt_direccion"
                android:background="@drawable/et_login"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginBottom="10dp"
                android:textColor="#FFF"
                android:textColorHint="#CCC"
                android:inputType="textPostalAddress" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:id="@+id/etTelefono"
                android:layout_gravity="center_horizontal"
                android:hint="@string/txt_telefono"
                android:background="@drawable/et_login"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginBottom="10dp"
                android:textColor="#FFF"
                android:textColorHint="#CCC"
                android:inputType="text|phone" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:id="@+id/etCelular"
                android:layout_gravity="center_horizontal"
                android:hint="@string/txt_celular"
                android:background="@drawable/et_login"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginBottom="10dp"
                android:textColor="#FFF"
                android:textColorHint="#CCC"
                android:inputType="text|phone" />

            <Spinner
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:id="@+id/spCiudad"
                android:background="@drawable/spinner_formularios"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginBottom="10dp"
                android:textColor="#FFF"
                android:layout_gravity="center"
                android:paddingEnd="30dp"
                android:spinnerMode="dialog" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:background="@drawable/et_login"
                android:hint="@string/txt_email"
                android:imeOptions="actionDone"
                android:inputType="textEmailAddress"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textColor="#FFF"
                android:textColorHint="#CCC" />

            <Spinner
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:id="@+id/spZonas"
                android:background="@drawable/spinner_formularios"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginBottom="10dp"
                android:textColor="#FFF"
                android:layout_gravity="center"
                android:paddingEnd="30dp"
                android:spinnerMode="dialog" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <Button
                    android:id="@+id/btGuardar"
                    android:layout_width="150dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/bt_ingreso"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="@string/txt_guardar"
                    android:textAllCaps="true"
                    android:textColor="#ed9300"
                    android:textSize="20sp"
                    tools:ignore="ButtonStyle,RtlHardcoded" />
                <Button
                    android:layout_width="150dp"
                    android:layout_height="38dp"
                    android:text="@string/txt_cancelar"
                    android:id="@+id/btCancelar"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/bt_ingreso"
                    android:textSize="20sp"
                    android:textAllCaps="true"
                    android:textColor="#ed9300"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_marginLeft="5dp"
                    tools:ignore="ButtonStyle,RtlHardcoded" />
            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>